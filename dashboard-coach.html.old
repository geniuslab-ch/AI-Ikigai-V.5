<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Coach | AI-Ikigai</title>
    <link rel="icon" href="favicon.svg" type="image/svg+xml">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Sora:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <style>
        .dashboard-layout {
            display: flex;
            min-height: 100vh;
            background: var(--dark);
        }

        .sidebar {
            width: 280px;
            background: var(--dark-card);
            border-right: 1px solid var(--dark-border);
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            overflow-y: auto;
            z-index: 1000;
        }

        .sidebar-header {
            padding: 2rem 1.5rem;
            border-bottom: 1px solid var(--dark-border);
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .user-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: var(--gradient-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Sora', sans-serif;
            font-weight: 700;
            font-size: 1.25rem;
        }

        .sidebar-nav {
            padding: 1rem 0;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1.5rem;
            color: var(--gray);
            text-decoration: none;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .nav-item:hover,
        .nav-item.active {
            background: rgba(139, 92, 246, 0.1);
            color: var(--light);
        }

        .nav-item.active {
            border-left: 3px solid var(--purple);
        }

        .main-content {
            margin-left: 280px;
            flex: 1;
            padding: 2rem;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .top-bar h1 {
            font-family: 'Sora', sans-serif;
            font-size: 2rem;
        }

        .btn-add-client {
            background: var(--gradient-primary);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            border: none;
            font-family: 'Outfit', sans-serif;
            font-weight: 600;
            cursor: pointer;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: var(--dark-card);
            border: 1px solid var(--dark-border);
            border-radius: 16px;
            padding: 1.5rem;
        }

        .stat-label {
            font-size: 0.85rem;
            color: var(--gray);
            margin-bottom: 0.5rem;
        }

        .stat-value {
            font-family: 'Sora', sans-serif;
            font-size: 2rem;
            font-weight: 700;
            background: var(--gradient-text);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .card {
            background: var(--dark-card);
            border: 1px solid var(--dark-border);
            border-radius: 24px;
            padding: 2rem;
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .card-header h2 {
            font-family: 'Sora', sans-serif;
            font-size: 1.5rem;
        }

        .clients-table {
            width: 100%;
            border-collapse: collapse;
        }

        .clients-table th {
            text-align: left;
            padding: 1rem;
            border-bottom: 1px solid var(--dark-border);
            color: var(--gray);
            font-size: 0.85rem;
            font-weight: 600;
        }

        .clients-table td {
            padding: 1rem;
            border-bottom: 1px solid var(--dark-border);
        }

        .clients-table tr:hover {
            background: rgba(139, 92, 246, 0.05);
        }

        .btn-view {
            background: transparent;
            border: 1px solid var(--purple);
            color: var(--purple);
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.85rem;
            cursor: pointer;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.8);
            z-index: 2000;
            align-items: center;
            justify-content: center;
        }

        .modal.active {
            display: flex;
        }

        .modal-content {
            background: var(--dark-card);
            border: 1px solid var(--dark-border);
            border-radius: 24px;
            padding: 2rem;
            max-width: 500px;
            width: 90%;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        .form-group input {
            width: 100%;
            padding: 0.75rem;
            background: var(--dark);
            border: 1px solid var(--dark-border);
            border-radius: 8px;
            color: var(--light);
        }

        .modal-actions {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .btn-cancel {
            background: transparent;
            border: 1px solid var(--dark-border);
            color: var(--gray);
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="dashboard-layout">
        <aside class="sidebar">
            <div class="sidebar-header">
                <a href="/" class="logo"><span>AI-Ikigai</span></a>
                <div class="user-info">
                    <div class="user-avatar" id="user-avatar">C</div>
                    <div class="user-details">
                        <h3 id="user-name">Coach</h3>
                        <p id="user-email"></p>
                    </div>
                </div>
            </div>
            <nav class="sidebar-nav">
                <a href="#" class="nav-item active"><span>üìä</span><span>Vue d'ensemble</span></a>
                <a href="#" class="nav-item"><span>üë•</span><span>Mes clients</span></a>
                <a href="profile.html" class="nav-item"><span>‚öôÔ∏è</span><span>Param√®tres</span></a>
                <a href="#" class="nav-item" onclick="handleLogout()"><span>üö™</span><span>D√©connexion</span></a>
            </nav>
        </aside>

        <main class="main-content">
            <div class="top-bar">
                <h1>Dashboard Coach</h1>
                <button class="btn-add-client" onclick="openAddClientModal()">‚ûï Ajouter un client</button>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-label">Clients actifs</div>
                    <div class="stat-value" id="total-clients">0</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Analyses totales</div>
                    <div class="stat-value" id="total-analyses">0</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Ce mois</div>
                    <div class="stat-value" id="month-analyses">0</div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2>Mes Clients</h2>
                </div>
                <table class="clients-table">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Analyses</th>
                            <th>Ajout√© le</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="clients-list">
                        <tr>
                            <td colspan="5" style="text-align: center; padding: 3rem; color: var(--gray);">Aucun client
                                pour le moment</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>
    </div>

    <div class="modal" id="add-client-modal">
        <div class="modal-content">
            <h2 style="font-family: 'Sora', sans-serif; margin-bottom: 1.5rem;">Ajouter un client</h2>
            <form onsubmit="handleAddClient(event)">
                <div class="form-group">
                    <label>Email du client</label>
                    <input type="email" id="client-email" required placeholder="client@example.com">
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn-cancel" onclick="closeAddClientModal()">Annuler</button>
                    <button type="submit" class="btn-add-client">Ajouter</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <script src="supabase-client.js"></script>
    <script>
        let currentUser = null;

        (async () => {
            currentUser = await checkAuth('coach');
            if (!currentUser) return;
            displayUserInfo();
            await loadDashboard();
        })();

        function displayUserInfo() {
            const initials = currentUser.name ? currentUser.name.split(' ').map(n => n[0]).join('').toUpperCase() : 'C';
            document.getElementById('user-avatar').textContent = initials;
            document.getElementById('user-name').textContent = currentUser.name || 'Coach';
            document.getElementById('user-email').textContent = currentUser.email;
        }

        async function loadDashboard() {
            try {
                const data = await DashboardAPI.getCoachDashboard();
                document.getElementById('total-clients').textContent = data.stats.totalClients;
                document.getElementById('total-analyses').textContent = data.stats.totalAnalyses;
                displayClients(data.clients);
            } catch (error) {
                console.error('Erreur:', error);
                showError('Erreur lors du chargement des donn√©es');
            }
        }

        function displayClients(clients) {
            const tbody = document.getElementById('clients-list');
            if (!clients || clients.length === 0) return;

            tbody.innerHTML = clients.map(client => `
                <tr>
                    <td>${client.name || 'N/A'}</td>
                    <td>${client.email}</td>
                    <td>${client.analyses_count}</td>
                    <td>${new Date(client.added_at).toLocaleDateString('fr-FR')}</td>
                    <td><button class="btn-view" onclick="viewClient('${client.id}')">Voir</button></td>
                </tr>
            `).join('');
        }

        function openAddClientModal() {
            document.getElementById('add-client-modal').classList.add('active');
        }

        function closeAddClientModal() {
            document.getElementById('add-client-modal').classList.remove('active');
            document.getElementById('client-email').value = '';
        }

        async function handleAddClient(e) {
            e.preventDefault();
            const email = document.getElementById('client-email').value;

            try {
                await DashboardAPI.addClient(email);
                showSuccess('Client ajout√© avec succ√®s');
                closeAddClientModal();
                await loadDashboard();
            } catch (error) {
                showError(error.message || 'Erreur lors de l\'ajout');
            }
        }

        function viewClient(id) {
            window.location.href = `client-detail.html?id=${id}`;
        }

        async function handleLogout() {
            if (confirm('Voulez-vous vraiment vous d√©connecter ?')) {
                await AuthAPI.signOut();
            }
        }
    </script>
</body>

</html>